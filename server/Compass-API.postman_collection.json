        {
          "name": "Signup",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    if (response.accessToken) {",
                  "        pm.collectionVariables.set('access_token', response.accessToken);",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@compass.com\",\n  \"password\": \"password123\",\n  \"firstname\": \"New\",\n  \"lastname\": \"User\",\n  \"techstack\": [\"React\", \"Node.js\", \"TypeScript\"],\n  \"user_roles\": [\"DEV\", \"DESIGNER\"],\n  \"hobbies\": [\"coding\", \"reading\"]\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/signup",
              "host": ["{{base_url}}"],
              "path": ["auth", "signup"]
