  "item": [
    {
      "name": "Admin - Generate Quiz",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{admin_token}}",
            "description": "Admin JWT token required"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"challengeType\": \"knowledge-sharing\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/culture-builder/quiz/generate",
          "host": ["{{base_url}}"],
          "path": ["culture-builder", "quiz", "generate"]
        },
        "description": "Admin endpoint to generate a new AI-powered quiz. Challenge types: engagement, cross-bu, mentorship, knowledge-share"
      },
      "response": []
    },
    {
